<nav id="menu">
	<div class="nav-wrapper">
		<p class="nav-label">Menu</p>
		<a class="close-button">Close</a>
		<div class="search-form">
			<input type="text" id="search" class="form-control" placeholder="Search ..." autocomplete="off" />
		</div>
		<div id="searchList"></div>
		<ul>
			{{#foreach navigation visibility="all"}}
			<li class="nav-{{slug}}{{#if current}} active{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
			{{/foreach}}
			{{#if @site.twitter}}
			<li class="nav-twitter"><a href="{{social_url type="twitter"}}" title="{{@site.twitter}}"><i class="ic ic-twitter"></i> Twitter</a></li>
			{{/if}}
			{{#if @site.facebook}}
			<li class="nav-facebook"><a href="{{social_url type="facebook"}}" title="{{@site.facebook}}"><i class="ic ic-facebook"></i> Facebook</a></li>
			{{/if}}
			{{#if @labs.subscribers}}
			<li class="nav-subscribe"><a href="{{@site.url}}/subscribe/"><i class="ic ic-mail"></i> Subscribe</a></li>
			{{else}}
			<li class="nav-rss"><a href="{{@site.url}}/rss/"><i class="ic ic-rss"></i> Subscribe</a></li>
			{{/if}}
		</ul>
	</div>
</nav>
